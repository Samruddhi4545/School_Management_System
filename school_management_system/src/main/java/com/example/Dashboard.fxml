<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.DashboardController"
    prefHeight="600.0" prefWidth="800.0">

    <Label text="School Management Dashboard">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <Separator />

    <HBox alignment="CENTER" spacing="30.0">
        <Button text="1. Manage Students" onAction="#handleManageStudents" prefWidth="150" />
        <Button text="2. Record Grades" onAction="#handleRecordGrades" prefWidth="150" />
        <Button text="3. Track Attendance" onAction="#handleTrackAttendance" prefWidth="150" />
    </HBox>
    
    <Label fx:id="statusLabel" text="Ready to start."
        style="-fx-font-style: italic;" />
    
</VBox>